<!DOCTYPE html>
<html>
  <head>
    <title>KakehashiApp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= javascript_pack_tag 'application', 'dataturbolinkstrack': 'reload' %>
    <%= stylesheet_pack_tag 'application', media: 'all', 'dataturbolinkstrack': 'reload' %>
  </head>

  <body>
    <%= render 'layouts/header' %>
    <%= render 'layouts/flash_messages'%>
    <%= yield %>
    <%= render 'layouts/footer' %>
    <%= debug(params) if Rails.env.development? %>
  </body>
</html>