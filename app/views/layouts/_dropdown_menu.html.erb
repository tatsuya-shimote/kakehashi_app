<div class="dropdown ml-auto">
  <a class="btn btn-outline-primary dropdown-toggle" href="#" role="button" id="dropdownMenuLink" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
    <%= current_user.name %>
  </a>
    <div class="dropdown-menu dropdown-menu-right" aria-labelledby="dropdownMenuLink">
      <%= link_to "グループ一覧",groups_path, class: "btn btn-outline-primary dropdown-item" %>
      <%= link_to "プロフィール",user_path(current_user), class: "btn btn-outline-primary dropdown-item" %>
      <% if group_member? %>
        <% if @group.members.count == 1 %>
          <%= button_to "退出してグループを削除", exit_group_path(@group), method: :delete, class: "btn btn-outline-danger dropdown-item" %>
        <% else %>
          <%= button_to "退出", exit_group_path(@group), method: :delete , class: "btn btn-outline-primary dropdown-item" %>
        <% end %>
      <% else %>
        <%= button_to "ログアウト", logout_path, method: :delete, class: "btn btn-outline-primary dropdown-item"  %>
      <% end %>
    </div>
</div>